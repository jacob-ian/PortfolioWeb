{
  "name": "functions",
  "scripts": {
    "build": "npx rimraf dist/projects && tsc -p tsconfig.build.json",
    "dev": "nodemon -e ts,js",
    "test": "jest --maxWorkers=1",
    "test:ci": "mocha --require ts-node/register src/**/*.spec.ts --exit",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "12"
  },
  "main": "dist/PortfolioWeb/index.js",
  "dependencies": {
    "firebase": "^8.3.3",
    "firebase-admin": "^9.2.0",
    "firebase-backend": "^0.1.5",
    "firebase-functions": "^3.11.0",
    "googleapis": "^71.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "firebase-functions-test": "^0.2.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^3.8.0"
  },
  "private": true,
  "nodemonConfig": {
    "watch": [
      "src/*"
    ],
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "delay": 2500,
    "exec": [
      "npm run build"
    ]
  }
}
